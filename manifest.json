{
  "manifest_version": 2,
  "name": "Access Tools",
  "description": "Improve your experience, one tool at a time.",
  "version": "0.0.2",
  "icons": {
    "64": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "filters.js",
        "content_script.js"        
      ]
    }
  ],
  
  "options_ui": {
    "page": "settings/index.html"
  },

  "permissions": ["storage"],

  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com"
    }
  }
}
